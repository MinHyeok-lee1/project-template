{
  "name": "dev-workspace",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write . && clang-format -i \"**/*.{c,cpp,h,hpp}\" || true",
    "check": "npm run lint && echo \"Clang-format will run on commit via lint-staged\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,json,yml,yaml,md}": [
      "prettier --write"
    ],
    "*.{c,cpp,h,hpp}": [
      "clang-format -i"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.2.0"
  }
}
